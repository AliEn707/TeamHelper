<?xml version="1.0 encoding="utf-8"?>
<project>
    <meta title="TeamHelper" package="com.TeamHelper" version="1.0.0" company="" />
    <app main="Main" file="TeamHelper" path="export" />

    <window background="#FFFFFF" fps="60" />
    <window width="600" height="800" if="desktop" />

    <!-- classpath, haxe libs -->
    <source path="source" />

    <haxelib name="openfl" />
    <haxelib name="actuate" />

    <haxelib name="haxeui-core" />
    <haxelib name="haxeui-openfl" />
	
    <haxelib name="haxe-tcpconnection" />
    <haxelib name="extension-audiorecorder" />
    <haxelib name="extension-geolocation" />
	
    <haxelib name="yaml" />
    <haxelib name="haxe-crypto" />

    <!--<assets path="assets/ui" rename="ui" />-->
    <assets path="assets/styles" rename="styles" />
    <assets path="assets" />
	
	<section if="android">
		<architecture name="x86" if="debug" />
		<architecture name="arm64" unless="debug" />
	</section>
</project>
