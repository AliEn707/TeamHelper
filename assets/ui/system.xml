<?xml version="1.0" encoding="utf-8"?>
<vbox id="main" width="100%" height="100%" style="padding:15px;spacing:15px;">
	<label id="iplabel" horizontalAlign="center" text="Local ip address not determined yet" />
	<hbox width="100%">
		<textfield id="host" width="50%" text="localhost" />
		<button id="connect" width="50%" text="connect"/>
	</hbox>
	<hbox width="100%">
		<hprogress id="loudness" width="100%" value="50" />
	</hbox>
	<textarea id="text" width="100%" height="100%"/>
    <button id="sound" width="100%" text="PTT" toggle="true" />
	<hbox width="100%">
        <textfield id="message" width="90%" />
		<button id="send" width="10%" text="Send"/>
    </hbox>
</vbox>